<Label>:
    text_size: self.width, None
    height: self.texture_size[1]
    size_hint_y: None
    font_size: 20
    font_name: "RobotoMono-Regular"
    markup: True

<MainApp>
    ScrollView:
        size_hint: (1, None)
        size: root.width, root.height
        do_scroll_y: True
        do_scroll_x: False
        bar_width: 15
        effect_cls: "ScrollEffect"
        scroll_type: ["bars"]
        GridLayout:
            cols: 3
            height: self.minimum_height
            size_hint_y: None
            Label:
                id: hex
                text: "Hex" 
            Label:
                id: ascii
                text: "ASCII"
            Label:
                id: markers
                text: "Markers"
    Button:
        id: openfile
        text: "Open Artifact"
        font_size: 16
        on_release: root.openFile()