<MyLabel@Label>:
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    size_hint_x: None
    font_size: 20
    font_name: "RobotoMono-Regular"
    markup: True

<MainApp>
    GridLayout:
        cols: 2
        size: root.width, root.height
        ScrollView:
            size_hint_x: None
            width: hex.width + ascii.width  

            do_scroll: False, True
            bar_width: 15
            effect_cls: "ScrollEffect"
            scroll_type: ["bars"]

            GridLayout:
                cols: 2
                height: self.minimum_height
                size_hint_y: None

                MyLabel:
                    id: hex
                    text: "Hex"
                    width: 564+20+20
                    padding: 20, 20

                MyLabel:
                    id: ascii
                    text: "ASCII"
                    width: 192+20+20
                    padding: 20, 20

        ScrollView:
            do_scroll: False, True
            bar_width: 15
            effect_cls: "ScrollEffect"
            scroll_type: ["bars"]

            MyLabel:
                id: markers
                text: "Markers"
                bold: True
                width: root.width-hex.width-ascii.width
                padding: 20, 20

    Button:
        id: openfile
        text: "Open Artifact"
        font_size: 16
        on_release: root.openFile()